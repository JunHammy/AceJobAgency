@page
@model IT2163_01_231928H_JoonJunHan.Pages.AuditLogModel
@{
    ViewData["Title"] = "Audit Logs";
}

<h2 class="text-center my-4">Audit Logs</h2>

<form method="post" class="mb-4 d-flex justify-content-between align-items-center">
    <div class="input-group w-50">
        <input type="text" id="searchQuery" name="SearchQuery" class="form-control" placeholder="Search logs..." value="@Model.SearchQuery" />
        <button type="submit" asp-page-handler="Search" class="btn btn-primary">Search</button>
    </div>
</form>

@if (Model.Logs.Count == 0)
{
    <div class="alert alert-warning text-center" role="alert">
        No logs available.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Action</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.Email</td>
                        <td>@log.Action</td>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    h2 {
        font-size: 2rem;
        font-weight: 600;
        color: #333;
    }

    .input-group input {
        border-radius: 5px 0 0 5px;
    }

    .input-group button {
        border-radius: 0 5px 5px 0;
    }

    .table {
        font-size: 1rem;
        border-radius: 10px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .alert {
        font-size: 1rem;
    }
</style>